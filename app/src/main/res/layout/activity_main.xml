<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <com.amisforms.elements.CompositeRadioGroup
        android:id="@+id/typeSelect"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:first_control_label="По e-mail адресу"
        app:second_control_label="По номеру телефона"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"/>

    <com.amisforms.elements.CompositeInputLayout
        android:id="@+id/compositeInput"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:orientation="vertical"/>

    <com.amisforms.elements.CompositeInputLayout
        android:id="@+id/compositeInputH"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:orientation="horizontal"/>

    <Switch
        android:id="@+id/switchElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Switch" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>